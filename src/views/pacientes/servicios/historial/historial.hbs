<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Club Salud</a></li>
                    <li class="breadcrumb-item active">Historial</li>
                </ol>
            </div>
            <h4 class="page-title">Historial</h4>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-success">
                <h4 class="text-light">Examenes</h4>
            </div>
            <div class="card-body">
                <div class="tab-pane show active" id="basic-datatable-preview">
                    <table id="basic-datatable" class="table table-striped dt-responsive nowrap w-100">
                        <thead>
                            <tr>
                                <th class="text-center">Numero</th>
                                <th class="text-center">Fecha</th>
                                <th class="text-center">Estado</th>
                                <th class="text-center">Medico</th>
                                <th class="text-center">Resultados</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each examenes}}                            
                                <tr>
                                    <td class="text-center"><a href="#" class="text-info examen">{{Numero}}</a></td>
                                    <td class="text-center">{{Fecha}}</td>
                                    <td class="text-center">{{Estado}}</td>
                                    <td class="text-center">{{Medico}}</td>
                                    {{#if disabled}}
                                        <td class="text-center">
                                            <a class="btn btn-outline-danger" href="javascript:void(0)">
                                                Sin resultados
                                            </a>
                                        </td>
                                        {{else}}
                                        <td class="text-center">
                                            <a class="btn btn-outline-info" href="/ver-resultados/{{_id}}">
                                                <i class="mdi mdi-eye"></i> Ver
                                            </a>
                                        </td>
                                    {{/if}}
                                </tr>
                            {{/each}}                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/sweetalert2.all.min.js"></script>
<script src="/js/admin/servicios/info-examenes.js"></script>
