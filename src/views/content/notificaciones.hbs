<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Club Salud</a></li>
                    <li class="breadcrumb-item active">Notificaciones</li>
                </ol>
            </div>
            <h4 class="page-title">Notificaciones</h4>
        </div>
    </div>
    <div class="col-12">
        <div class="row">
            <div class="col-sm-12">
                {{#each notificaciones}}
                <a href="{{link}}" class="text-secondary">
                    <div class="card widget-flat" >
                        <div class="card-body">
                            <div class="float-end">
                                <img src="{{Imagen}}" class="img-fluid" width="50px">
                            </div>
                            <h5 class="text-muted fw-normal mt-0" title="Number of Customers">{{Fecha}}</h5>
                            <h3 class="mt-3 mb-3">{{Titulo}}</h3>
                            <p class="mb-0 text-muted">
                                <span class="text-nowrap">{{Mensaje}}</span>  
                            </p>
                        </div> <!-- end card-body-->
                    </div>
                </a>
                {{/each}}
            </div>
        </div>
    </div>
</div>