<style>
    .filtro {
        display: none;
        transition: all 0.5s;
    }
</style>
<div class="row">
      <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Club Salud</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Social</a></li>
                    <li class="breadcrumb-item active">Contactos</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-xxl-12 mb-3">
        <div class="app-search dropdown">
            <form>
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Buscar contacto..." id="search">
                    <span class="mdi mdi-magnify search-icon"></span>
                </div>
            </form>
        </div>
    </div>
    {{#each usuarios}}
        <div class="col-md-6 col-xxl-3">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                        <img src="{{RutaImage}}" class="rounded-circle avatar-md img-thumbnail" alt="Foto perfil">
                        <h4 class="mt-3 my-1 usuarios">{{Nombres}} {{Apellidos}}<i class="mdi mdi-check-decagram text-primary"></i></h4>
                        <p class="mb-0 text-muted">Tipo de usuario: MÃ©dico</p>
                        <p class="mb-0 text-muted">Especialidad: {{Especialidad}}</p>
                        <p class="mb-0 text-muted"><i class="mdi mdi-email-outline me-1"></i>{{email}}</p>
                        <hr class="bg-dark-lighten my-3">
                        <div class="row mt-3">
                            {{#if Contacto}}
                                    <div class="col-6">
                                        <a href="/Chat" class="btn w-100 btn-light" data-bs-toggle="tooltip" data-bs-placement="top" title="Enviar mensaje"><i class="mdi mdi-message-processing-outline"></i></a>
                                    </div>
                                    <div class="col-6">
                                        <a href="javascript:void(0);" class="btn w-100 btn-light agregar" data-id="{{_id}}" ><i class="uil uil-user-plus"></i></a>
                                    </div>
                                {{else}}
                                    <div class="col-6">
                                        <a href="/Chat" class="btn w-100 btn-light" data-bs-toggle="tooltip" data-bs-placement="top" title="Enviar mensaje"><i class="mdi mdi-message-processing-outline"></i></a>
                                    </div>
                                    <div class="col-6">
                                        <a href="javascript:void(0);" class="btn w-100 btn-success"><i class="uil uil-user-check"></i></a>
                                    </div>
                            {{/if}}
                          
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    {{/each}}
</div>
<script src="/js/sweetalert2.all.min.js"></script>
<script src="/js/admin/red/contactos.js"></script>
