<div class="row">
      <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/inicio">Club Salud</a></li>
                    <li class="breadcrumb-item"><a href="/area-directorios">Directorio</a></li>
                    <li class="breadcrumb-item"><a href="/directorio-usuarios">Usuarios</a></li>
                    <li class="breadcrumb-item active">Ficha</li>
                </ol>
            </div>
            <h4 class="page-title">{{usuario.Nombres}} {{usuario.Apellidos}}</h4>
        </div>
    </div>
    <div class="col-12">
        <div class="card ribbon-box">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4 ">
                        <figure class="figure ">
                            <img src="{{usuario.RutaImage}}" alt="user-image" width="150px" class="figure-img img-fluid  rounded-circle">
                            <figcaption class="figure-caption text-center">{{usuario.Nombres}} {{usuario.Apellidos}}</figcaption>
                        </figure>
                    </div>
                    <div class="col-sm-8">
                        <div class="row">

                            <div class="col-sm-10">
                                <h4 class="text-center">Información rápida</h4>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-sm-6">
                                <p>Último inicio de sesión: <span class="text-muted">{{ultimoInicio}}</span>
                            </div>
                            <div class="col-sm-6">
                                <p>Roles: <span class="text-muted">{{usuario.Roles}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- end card-body -->
        </div> <!-- end card-->
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-success ">
                <h4 class="card-title text-light ">Información personal</h4>
            </div>
            <div class="card-body">
                 <form  method="post" id="form" data-id="{{usuario._id}}">
                     <div class="row">
                         <div class="col-sm-12" id="insertError">

                         </div>
                     </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="email">Correo electrónico</label>
                                <input type="email" name="email" id="email" autocomplete="username" value="{{usuario.Email}}" placeholder="Introduzca correo electronico del usuario" class="form-control">
                            </div>
                        </div>
                   
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="emailConfirm">Confirmar correo electrónico</label>
                                <input type="email" name="emailConfirm" id="emailConfirm" autocomplete="username" value="{{usuario.Email}}" placeholder="Confirme correo electronico del usuario" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="password">Contraseña</label>
                                <input type="password" name="password" id="password" autocomplete="new-password" value="{{usuario.password}}" placeholder="Introduzca contraseña del usuario" class="form-control">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="passwordConfirm">Confirmar contraseña</label>
                                <input type="password" name="passwordConfirm" id="passwordConfirm" autocomplete="new-password" value="{{usuario.password}}" placeholder="Confirme contaseña del usuario" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 text-end">
                            <button class="btn btn-primary" id="btnSubmit">Actualizar datos</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-success">
                <h4 class="card-tittle text-light">Historial de ingresos</h4>
            </div>
            <div class="card-body">
                <table id="selection-datatable" class="table table-striped dt-responsive nowrap w-100">
                    <thead>
                        <tr>
                            <th style="font-size: 22px;">Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each Historial}}
                            <tr>
                                <td style="font-size: 22px;">{{Fecha}}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="/js/admin/edicion/usuarios.js"></script>