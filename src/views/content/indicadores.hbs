<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    const d = document,
    $reportePuntosMensual = d.getElementById('reportePuntosMensual'), 
    $reportePuntosSemanales = d.getElementById('reportePuntosSemanales'), 
    $exportarReporteMensual = d.getElementById('exportarReporteMensual'),
    $exportarMedicos = d.getElementById('exportarMedicos'),
    $exportarReporteSemanales = d.getElementById('exportarReporteSemanales');


    d.addEventListener('click', e=>{
        if(e.target == $exportarReporteMensual){
            window.open('/exportar-indicadores/mensual', '_blank');
        }
        if(e.target == $exportarMedicos){
            window.open('/exportar-indicadores/medicos', '_blank');
        }
        if(e.target == $exportarReporteSemanales){
            window.open('/exportar-indicadores/semanal', '_blank');
        }
    })


</script>
