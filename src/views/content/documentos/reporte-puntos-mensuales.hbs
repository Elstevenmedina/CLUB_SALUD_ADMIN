<body>
    <div class="container-fluid">
        <div class="row my-3">
            <div class="col-12 text-center">
                <h2>REPORTE DE PUNTOS</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 w-50">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h4 class="header-title">Puntos por meses</h4>
                </div>

                <div dir="ltr">
                    <div id="high-performing-product" class="apex-charts" data-colors="#536de6,#e3eaef"></div>
                </div>
            </div> <!-- end col-->
        </div>
        <div class="card">
            <div class="row mt-2">
                <div class="col-sm-12">
                    <table class="table">
                        <thead>
                            <tr>
                            <th scope="col">AÃ±o</th>
                            <th scope="col">Mes</th>
                            <th scope="col">Puntos totales</th>
                            <th scope="col">Puntos netos</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each dataMeses}}
                                <tr>
                                    <th>{{Anio}}</th>
                                    <th>{{Mes}}</th>
                                    <th>{{PuntosTotales}} pts</th>
                                    <th>{{PuntosNetos}} pts</th>
                                </tr>
                            {{/each}}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="2" class="text-end text-danger">Total</td>
                                <td>{{PuntosTotales}} pts</td>
                                <td>{{PuntosNetos}} pts</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                
            </div>
        </div>
        
        </div>

